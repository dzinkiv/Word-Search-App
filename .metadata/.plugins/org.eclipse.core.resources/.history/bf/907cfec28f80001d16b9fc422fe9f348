package wordsearch;

import java.awt.*;
import java.awt.event.*;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
 
// An AWT GUI program inherits the top-level container java.awt.Frame
public class View extends JFrame implements ActionListener{
   private TextField[] gridCells;  // Array of 10 numeric Buttons
   private Button btnHash, btnStar;
   private TextField tfInput;
   private Label text1;
   private JButton createButton;
   private int size;
   private Panel grid;
 
   // Constructor to setup GUI components and event handlers
   public View () {
	   createButton = new JButton();
	   createButton.setBounds(100,100,100,25);
	   createButton.addActionListener(this);
	   createButton.setText("Create");

	   tfInput = new TextField(3);

	   text1 = new Label("Enter Size: ");


	   setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	   setTitle("Word Search Solver (WSS)");
	   setLayout(null);
	   //setResizable(false);
	   setSize(700,700);
	   setVisible(true);
	   //pack();


	   // Set up display panel
	   Panel panelDisplay = new Panel(new FlowLayout());

	   panelDisplay.add(text1);
	   panelDisplay.add(tfInput);
	   panelDisplay.add(createButton);

	   
	   

	   


	   setLayout(new BorderLayout());  // "super" Frame sets to BorderLayout
	   add(panelDisplay, BorderLayout.NORTH);
	   


	   setTitle("Word Search Solver (WSS)"); // "super" Frame sets title
	   setSize(400, 200);             // "super" Frame sets initial size
	   setVisible(true);              // "super" Frame shows

   }
   
   
 @Override
 public void actionPerformed(ActionEvent e) {
	   if(e.getSource()==createButton) {
		   try{
			   size = Integer.parseInt(tfInput.getText());
			   System.out.println("Created table");
			   
			   grid = new Panel(new GridLayout(size, size));

			   // Set up button panel
			   gridCells = new TextField[size*size];  // Construct an array of 10 numeric Buttons
			   for(int i=0; i<(size*size);i++) {
				   gridCells[1] = new TextField();  // Construct Button "1"
				   grid.add(gridCells[1]);  // The Panel adds this Button
			   }

			   add(grid, BorderLayout.CENTER);
		   }
		   catch (NumberFormatException ex){
			   ex.printStackTrace();
		   }
	   }
 }
   

